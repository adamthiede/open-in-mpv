{
  "name": "__MSG_extensionName__",
  "short_name": "__MSG_extensionShortName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.0",
  "manifest_version": 3,
  "default_locale": "en",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "64": "icons/64x64.png",
    "128": "icons/128x128.png"
  },
  "minimum_chrome_version": "93",
  "background": {
    "scripts": [
      "background.js"
    ],
    "x-chrome-service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "64": "icons/64x64.png",
      "128": "icons/128x128.png"
    },
    "default_title": "Open in mpv"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads",
    "webNavigation"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "mpv-scheme-handler.desktop"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}